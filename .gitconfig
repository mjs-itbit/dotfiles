[color]
	ui=auto

[alias]
	st = status -s -b
    man = help
	ci = commit
	co = checkout
	aa = add --all
	di = diff
	dc = diff --cached
	lg = log --graph --abbrev-commit --date=relative
	head = !git lg -5
	recent = !git lg -20
	rehead = reset --hard HEAD

[format]
    pretty=format:%C(yellow)%h%Creset -%C(red)%d%Creset %s %Cgreen(%ar) %C(bold blue)<%an>%Creset
	
